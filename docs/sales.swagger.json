{
  "tags": [
    { "name": "Sales", "description": "Sales entry and listing" }
  ],
  "paths": {
    "/api/v1/sales": {
      "post": {
        "tags": ["Sales"],
        "summary": "Create sale entry",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SaleInput"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Sale created" },
          "500": { "description": "Server error" }
        }
      },
      "get": {
        "tags": ["Sales"],
        "summary": "Get all sales for current user",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Sales list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Sale" }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/sales/categories/{location_id}": {
      "get": {
        "tags": ["Sales"],
        "summary": "Get category list for specific location",
        "parameters": [
          {
            "name": "location_id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Category list" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Sale": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "user_id": { "type": "integer" },
          "category_id": { "type": "integer" },
          "location_id": { "type": "integer" },
          "date": { "type": "string", "format": "date" },
          "amount": { "type": "number" },
          "notes": { "type": "string" }
        }
      },
      "SaleInput": {
        "type": "object",
        "required": ["category_id", "location_id", "date", "amount"],
        "properties": {
          "category_id": { "type": "integer" },
          "location_id": { "type": "integer" },
          "date": { "type": "string", "format": "date" },
          "amount": { "type": "number" },
          "notes": { "type": "string" }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
