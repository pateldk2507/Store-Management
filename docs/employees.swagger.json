{
  "tags": [
    {
      "name": "Employee",
      "description": "Employees management"
    }
  ],
  "paths": {
    "/api/v1/employees": {
      "post": {
        "tags": ["Employee"],
        "summary": "Create an employee (Owner only)",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/EmployeeInput" }
            }
          }
        },
        "responses": {
          "201": { "description": "Employee created" },
          "403": { "description": "Forbidden" },
          "500": { "description": "Server error" }
        }
      },
      "get": {
        "tags": ["Employee"],
        "summary": "Get all employees",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "List of employees",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Employee" }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/employees/{id}": {
      "get": {
        "tags": ["Employee"],
        "summary": "Get employee by ID",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": { "description": "Employee details" },
          "404": { "description": "Not found" }
        }
      },
      "put": {
        "tags": ["Employee"],
        "summary": "Update employee",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/EmployeeInput" }
            }
          }
        },
        "responses": {
          "200": { "description": "Employee updated" }
        }
      },
      "delete": {
        "tags": ["Employee"],
        "summary": "Delete employee",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": { "description": "Employee deleted" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Employee": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "email": { "type": "string" },
          "phone": { "type": "string" },
          "business_id": { "type": "integer" },
          "temp_password": { "type": "boolean" }
        }
      },
      "EmployeeInput": {
        "type": "object",
        "required": ["name", "email", "password"],
        "properties": {
          "name": { "type": "string" },
          "email": { "type": "string" },
          "password": { "type": "string" },
          "phone": { "type": "string" },
          "business_id": { "type": "integer" },
          "job_title": { "type": "string" }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
